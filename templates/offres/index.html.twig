
{% extends 'baseBack.html.twig' %}
{% block title %} Offres index{% endblock %}

{% block body %}
    <h1>Liste des Offres dispo</h1>

    <table class="table"> 
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Date_offre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for offre in offres %}
            <tr>
                <td>{{ offre.id }}</td>
                <td>{{ offre.titre }}</td>
                <td>{{ offre.description }}</td>
                <td>{{ offre.dateOffre }}</td>
                <td>
                    <a href="{{ path('app_offres_show', {'id': offre.id}) }}">show</a>
                    <a href="{{ path('app_offres_edit', {'id': offre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_offres_new') }}">Create new</a>
{% endblock %}
